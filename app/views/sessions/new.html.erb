<h1 class="inline">Sign in</h1> 
<span>
	(or <%= link_to "sign up", signup_path %>)
</span>
<%= form_for(:session, :url => sessions_path) do |f| %>
	
	<div class="field">
		<%= f.label :email %>
		<br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %>
		<br />
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>

