<div class="user_info">
  <a href="<%= user_path(current_user) %>">
	<%#- gravatar_for current_user, :size => 30 %>
    <span class="user_email">
      <%= current_user.email %>
    </span>
    <span class="microposts">
      <%= pluralize(current_user.items.count, "item") %>
    </span>
  </a>
</div>